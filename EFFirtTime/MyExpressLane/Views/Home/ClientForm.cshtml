@{
    ViewBag.Title = "Receiving Notifications";
    
}
<script src="../../Scripts/jquery.signalR-1.1.3.min.js" type="text/javascript"></script>
<script src="/signalr/hubs"></script>
<script type="text/javascript">
    $(function () {
        var proxy = $.connection.notificationHub;
        proxy.client.receiveNotification = function (message) {
            $("#container").append(message);
            $("#container").append("<br/>");
            //$("#container").slideDown(2000);
            //setTimeout('$("#container").slideUp(2000)', 5000);
        };
        $.connection.hub.start();
    });
</script>
 <div class="notificationBalloon" id="container"></div>
 



