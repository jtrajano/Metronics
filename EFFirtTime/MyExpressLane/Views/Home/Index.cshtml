@{
    ViewBag.Title = "Sending Notification";
}

<div id="divlist"></div>
<div id="divPager"></div>
<script type="text/javascript" src="../../Scripts/jquery.signalR-1.1.3.min.js"></script>
<script src="/signalr/hubs"></script>
<script type="text/javascript">

    $(function () {
        var proxy = $.connection.notificationHub;
        $("#button1").click(function () {
            proxy.server.sendNotifications($("#text1").val());
        })
        $.connection.hub.start();
                $("#divlist").html("<table id='RequestGrid'></table>")

                $("#RequestGrid").jqGrid({
                    url: '/Request/GetGrid/',
                    datatype: 'json',
                    mtype: 'GET',
                    colNames: ['Request ID', 'WBS', 'Summary'],
                    colModel: [
                  { name: 'id', index: 'id', width: 40, align: 'left' },
                  { name: 'wbsno', index: 'wbsno', width: 40, align: 'left' },
                  { name: 'summary', index: 'summary', width: 200, align: 'left'}],
                    pager: jQuery('#divPager'),
                    rowNum: 10,
                    rowList: [5, 10, 20, 50],
                    sortname: 'id',
                    sortorder: "desc",
                    viewrecords: true,
                    imgpath: '/scripts/themes/coffee/images',
                    caption: 'My first grid'
                });
    }); 
</script>
<input id="text1" type="text" />
<input id="button1" type="button" value="Send"/>





